---
import links from './data/links.json';
import logo from './assets/logo-outline-opt.svg'
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="Link In Bio for Ahoy Coffee Co." />
  <title>Link In Bio for Ahoy Coffee Co.</title>
  <style>
    @keyframes wavy {
      50%   { background-position: 75px 170px; }
      100%  { background-position: 146px 200px; }
    }

    body {
      background: url(assets/waves-light-opt.png) repeat-x 0 200px;
      animation: wavy 10s ease-in-out infinite;
    }
  </style>
</head>
<body class="bg-cyan-100">
  <main id="app">
    <header class="h-40 pt-7 bg-gradient-to-t from-white to-yellow-200 border-b-2 border-cyan-200">
      <a href="https://ahoy.coffee">
        <img src={logo} alt="Ahoy Coffee Co. logo" class="h-16 w-16 mx-auto">
      </a>
    </header>

    <nav>
      <ul class="mx-auto sm:max-w-2xl py-4 px-2 sm:px-8 -mt-14">

        {links.map(link => {
          return(
            <li>
              <a href={link.url} target="_blank" rel="noopener noreferrer" class="block p-6 mb-2 shadow-md rounded-md opacity-95 bg-gray-100 text-blue-900 hover:bg-red-100 hover:text-red-700 active:bg-red-400 active:text-white">
                {link.icon}
                {link.title}
              </a>
            </li>
          )
        })}

      </ul>
    </nav>
  </main>
</body>
</html>
